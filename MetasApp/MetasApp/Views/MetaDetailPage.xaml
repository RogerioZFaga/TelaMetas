<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="MetasApp.Views.MetaDetailPage"
  BackgroundColor="White"
  Title="Detalhes">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label x:Name="NomeLabel" FontSize="30" FontAttributes="Bold" TextColor="Black"/>
            <Label Text="Descrição" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="DescricaoLabel"  FontSize="15" TextColor="Gray"/>
            <Label Text="Data limite" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="DataLimiteLabel"   FontSize="15" TextColor="Gray"/>
            <Label Text="Data conclusão" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="DataConclusaoLabel"   FontSize="15" TextColor="Gray"/>
            <Button Text="Excluir" BackgroundColor="Red" TextColor="White" Clicked="OnExcluirClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>